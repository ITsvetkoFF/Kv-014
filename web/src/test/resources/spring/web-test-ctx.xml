<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       profile="test">

    <import resource="classpath:spring/web-common-ctx.xml"/>
    <import resource="classpath:spring/service-test-ctx.xml"/>
    <bean id="requestMappingHandlerMapping" class="org.springframework.web.servlet.mvc.method.annotation.RequestMappingHandlerMapping"/>
    <bean id="parameterNameDiscoverer" class="org.springframework.core.DefaultParameterNameDiscoverer"/>
    <bean id="webTestProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="locations" value="classpath*:asciidoc/web-test.properties"/>
    </bean>
</beans>